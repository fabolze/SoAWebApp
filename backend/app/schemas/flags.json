{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Game Flag",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique internal ID for the flag",
        "ui": {
          "widget": "hidden"
        }
      },
      "slug": {
        "type": "string",
        "ui": { "widget": "text", "label": "ID/Slug" }
      },
      "name": {
        "type": "string",
        "description": "Short human-readable label for the flag",
        "ui": {
          "widget": "text",
          "label": "Flag Name"
        }
      },
      "description": {
        "type": "string",
        "description": "Longer explanation what this flag tracks or controls",
        "ui": {
          "widget": "textarea",
          "label": "Description"
        }
      },
      "flag_type": {
        "type": "string",
        "description": "Optional category to organize flags",
        "enum": [
          "Story Progress",
          "Quest State",
          "Lore Discovery",
          "Item Unlock",
          "NPC Relationship",
          "Companion Progress",
          "Secret Discovery",
          "Shop Unlock",
          "Event Trigger",
          "Other"
        ],
        "ui": {
          "widget": "select",
          "label": "Flag Type",
          "options": [
            "Story Progress",
            "Quest State",
            "Lore Discovery",
            "Item Unlock",
            "NPC Relationship",
            "Companion Progress",
            "Secret Discovery",
            "Shop Unlock",
            "Event Trigger",
            "Other"
          ]
        }
      },
      "default_value": {
        "type": "boolean",
        "description": "Does the flag start active (true) or inactive (false)? Defaults to false.",
        "default": false,
        "ui": {
          "widget": "checkbox",
          "label": "Default Active?"
        }
      },
      "content_pack_id": {
        "type": "string",
        "description": "Optional content pack association",
        "ui": {
          "widget": "reference",
          "reference": "content-packs",
          "label": "Content Pack"
        }
      },
      "tags": {
        "type": "array",
        "description": "Tags for filtering/searching/categorization",
        "items": { "type": "string" },
        "ui": { "widget": "tags", "label": "Tags" }
      }
    },
    "required": ["id", "slug", "name", "description"]
  }




