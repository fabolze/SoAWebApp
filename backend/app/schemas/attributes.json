{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Character Attribute",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "ui": { "widget": "hidden" }
      },
      "slug": {
        "type": "string",
        "ui": { "widget": "text", "label": "ID/Slug" }
      },
      "name": {
        "type": "string",
        "ui": { "widget": "text", "label": "Attribute Name" }
      },
      "description": {
        "type": "string",
        "ui": { "widget": "textarea", "label": "Description" }
      },
      "value_type": {
        "type": "string",
        "enum": ["int", "float"],
        "ui": {
          "widget": "select",
          "label": "Value Type",
          "options": ["int", "float"]
        }
      },
      "default_value": {
        "type": "number",
        "ui": { "widget": "number", "label": "Default Value" }
      },
      "min_value": {
        "type": "number",
        "ui": { "widget": "number", "label": "Min Value" }
      },
      "max_value": {
        "type": "number",
        "ui": { "widget": "number", "label": "Max Value" }
      },
      "scaling": {
        "type": "string",
        "enum": ["None", "Linear", "Exponential", "Logarithmic", "Custom"],
        "ui": {
          "widget": "select",
          "label": "Scaling Type",
          "options": ["None", "Linear", "Exponential", "Logarithmic", "Custom"]
        }
      },
      "results_in": {
        "type": "array",
        "description": "Which stats this attribute contributes to, and how",
        "items": {
          "type": "object",
          "properties": {
            "stat_id": {
              "type": "string",
              "description": "ID of the affected stat (referencing stats.json)",
              "ui": {
                "widget": "select",
                "label": "Stat",
                "reference": "stats"
              }
            },
            "scale": {
              "type": "string",
              "enum": ["None", "Linear", "Exponential", "Logarithmic", "Custom"],
              "description": "Scaling model",
              "ui": {
                "widget": "select",
                "label": "Scale Type",
                "options": ["None", "Linear", "Exponential", "Logarithmic", "Custom"]
              }
            },
            "multiplier": {
              "type": "number",
              "description": "How much 1 point of this attribute adds to the stat",
              "ui": {
                "widget": "number",
                "label": "Multiplier"
              }
            }
          },
          "required": ["stat_id", "scale", "multiplier"]
        }
      },
      "used_in": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["Character", "Item", "Effect", "Ability", "Class"]
        },
        "ui": { "widget": "multiselect", "label": "Used In" }
      },
      "icon_path": {
        "type": "string",
        "ui": { "widget": "filepicker", "label": "Icon" }
      },
      "tags": {
        "type": "array",
        "description": "Tags for filtering/searching/categorization",
        "items": { "type": "string" },
        "ui": { "widget": "tags", "label": "Tags" }
      }
    },
    "required": ["id", "slug", "name", "value_type"]
  }
