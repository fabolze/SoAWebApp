{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Quest",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique ID for the quest",
      "ui": { "widget": "hidden" }
    },
    "slug": {
      "type": "string",
      "ui": { "widget": "text", "label": "ID/Slug" }
    },
    "title": {
      "type": "string",
      "description": "Quest title",
      "ui": { "widget": "text", "label": "Title" }
    },
    "description": {
      "type": "string",
      "description": "Quest description shown to player",
      "ui": { "widget": "textarea", "label": "Description" }
    },
    "story_arc_id": {
      "type": "string",
      "description": "Which story arc this quest belongs to",
      "ui": {
        "widget": "reference",
        "reference": "story-arcs",
        "label": "Story Arc"
      }
    },
    "requirements_id": {
      "type": "string",
      "description": "Requirement to unlock this quest",
      "ui": {
        "widget": "reference",
        "reference": "requirements",
        "label": "Requirements"
      }
    },
    "objectives": {
      "type": "array",
      "description": "List of objectives within the quest",
      "items": {
        "type": "object",
        "properties": {
          "objective_id": { "type": "string", "description": "Internal ID for this objective" },
          "description": { "type": "string", "description": "Player-facing description of this objective" },
          "requirements_id": {
            "type": "string",
            "description": "Requirement to unlock this objective",
            "ui": {
              "widget": "reference",
              "reference": "requirements",
              "label": "Requirements"
            }
          },
          "flags_set": {
            "type": "array",
            "description": "Flags to set when this objective is completed",
            "items": { "type": "string" },
            "ui": {
              "widget": "multiselect",
              "label": "Flags Set",
              "reference": "flags"
            }
          }
        },
        "required": ["objective_id", "description"]
      },
      "ui": { "widget": "objectives_editor", "label": "Objectives" }
    },
    "flags_set_on_completion": {
      "type": "array",
      "description": "Flags to set when the quest is fully completed",
      "items": { "type": "string" },
      "ui": {
        "widget": "multiselect",
        "label": "Flags Set on Completion",
        "reference": "flags"
      }
    },
    "xp_reward": {
      "type": "number",
      "description": "XP granted when the quest is completed",
      "ui": { "widget": "number", "label": "Experience" }
    },
    "currency_rewards": {
      "type": "array",
      "description": "Currencies granted on completion",
      "items": {
        "type": "object",
        "properties": {
          "currency_id": {
            "type": "string",
            "ui": {
              "widget": "reference",
              "reference": "currencies",
              "label": "Currency"
            }
          },
          "amount": {
            "type": "number",
            "ui": { "widget": "number", "label": "Amount" }
          }
        },
        "required": ["currency_id", "amount"]
      }
    },
    "reputation_rewards": {
      "type": "array",
      "description": "Faction reputation adjustments",
      "items": {
        "type": "object",
        "properties": {
          "faction_id": {
            "type": "string",
            "ui": {
              "widget": "reference",
              "reference": "factions",
              "label": "Faction"
            }
          },
          "amount": {
            "type": "number",
            "description": "Positive or negative reputation delta",
            "ui": { "widget": "number", "label": "Delta" }
          }
        },
        "required": ["faction_id", "amount"]
      }
    },
    "item_rewards": {
      "type": "array",
      "description": "Items granted as a reward",
      "items": {
        "type": "object",
        "properties": {
          "item_id": {
            "type": "string",
            "ui": {
              "widget": "reference",
              "reference": "items",
              "label": "Item"
            }
          },
          "quantity": {
            "type": "number",
            "ui": { "widget": "number", "label": "Quantity" }
          }
        },
        "required": ["item_id", "quantity"]
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for filtering/searching/categorisation",
      "items": { "type": "string" },
      "ui": { "widget": "tags", "label": "Tags" }
    }
  },
  "required": ["id", "slug", "title", "description"]
}
