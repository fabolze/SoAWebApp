{
  "effect_id": {
    "type": "string",
    "ui": "hidden"
  },
  "name": {
    "type": "string",
    "ui": "text",
    "description": "Human-readable name of the effect, e.g., 'Stun', 'Heal %'"
  },
  "type": {
    "type": "enum",
    "values": [
      "Status",
      "Damage",
      "Heal",
      "Modifier",
      "Reflect",
      "Summon",
      "Shield",
      "Control"
    ],
    "ui": "dropdown",
    "description": "Category of effect"
  },
  "description": {
    "type": "string",
    "ui": "textarea",
    "description": "In-game UI description of what the effect does"
  },
  "target": {
    "type": "enum",
    "values": [
      "Self",
      "Enemy",
      "Ally",
      "All",
      "Area"
    ],
    "ui": "dropdown",
    "description": "Who the effect applies to"
  },
  "duration": {
    "type": "float",
    "ui": "number",
    "description": "Duration in seconds; 0 = instant, -1 = permanent"
  },
  "value_type": {
    "type": "enum",
    "values": [
      "Flat",
      "Percentage",
      "None"
    ],
    "ui": "dropdown",
    "description": "How to interpret the value (flat number or percent)"
  },
  "value": {
    "type": "float",
    "ui": "number",
    "description": "Numerical effect amount (e.g. 50 HP or 20% if value_type is 'Percentage')"
  },
  "attribute": {
    "type": "enum",
    "values": [
      "Attack",
      "Defense",
      "Speed",
      "Vitality",
      "Strength",
      "Magic Power",
      "Armor",
      "Mana",
      "All"
    ],
    "ui": "dropdown",
    "optional": true,
    "description": "Attribute affected, if any"
  },
  "scaling_stat": {
    "type": "enum",
    "values": [
      "Attack",
      "Magic Power",
      "Speed",
      "Vitality",
      "Strength",
      "None"
    ],
    "ui": "dropdown",
    "optional": true,
    "description": "Stat that determines effect scaling"
  },
  "trigger_condition": {
    "type": "enum",
    "values": [
      "None",
      "On Hit",
      "When Damaged",
      "On Kill",
      "On Cast",
      "Passive"
    ],
    "ui": "dropdown",
    "optional": true,
    "description": "Optional: trigger condition for this effect"
  },
  "stackable": {
    "type": "bool",
    "ui": "checkbox",
    "description": "Whether this effect can stack multiple times"
  },
  "set_bonus_group": {
    "type": "string",
    "ui": "text",
    "optional": true,
    "description": "Optional: Set group identifier for tracking combined effects"
  },
  "icon_path": {
    "type": "string",
    "ui": "filepicker",
    "optional": true,
    "description": "Path to icon representing this effect"
  },
  "related_items": {
    "type": "array",
    "items": {
      "type": "string",
      "ui": "reference",
      "reference": "item"
    },
    "ui": "multi-select",
    "optional": true,
    "description": "List of item IDs that apply this effect"
  }
}