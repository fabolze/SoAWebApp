{
  "id": {
    "type": "string",
    "ui": "hidden"
  },
  "name": {
    "type": "string",
    "ui": "text"
  },
  "type": {
    "type": "enum",
    "values": [
      "Armor",
      "Weapon",
      "Consumable",
      "Quest Item"
    ],
    "ui": "dropdown"
  },
  "equipment_slot": {
    "type": "enum",
    "values": [
      "Head",
      "Shoulders",
      "Chest",
      "Legs",
      "Shoes",
      "Hands",
      "Neck",
      "Back",
      "Ring",
      "Trinket"
    ],
    "ui": "dropdown",
    "visible_if": "type = Armor",
    "optional": true
  },
  "weapon_slot_type": {
    "type": "enum",
    "values": [
      "One-Handed",
      "Two-Handed",
      "Offhand"
    ],
    "ui": "dropdown",
    "visible_if": "type = Weapon",
    "optional": true
  },
  "rarity": {
    "type": "enum",
    "values": [
      "Common",
      "Uncommon",
      "Rare",
      "Epic",
      "Legendary"
    ],
    "ui": "dropdown"
  },
  "description": {
    "type": "string",
    "ui": "textarea"
  },
  "item_stats": {
    "type": "object",
    "visible_if": "type in [Armor, Weapon]",
    "fields": {
      "armor": {
        "type": "int",
        "ui": "number",
        "optional": true
      },
      "damage": {
        "type": "int",
        "ui": "number",
        "optional": true
      },
      "magic_resist": {
        "type": "int",
        "ui": "number",
        "optional": true
      }
    }
  },
  "attributes_bonus": {
    "type": "object",
    "visible_if": "type in [Armor, Weapon, Consumable]",
    "fields": {
      "strength": {
        "type": "int",
        "ui": "number",
        "optional": true
      },
      "vitality": {
        "type": "int",
        "ui": "number",
        "optional": true
      }
    }
  },
  "effects": {
    "type": "array",
    "visible_if": "type != Quest Item",
    "items": {
      "type": "string",
      "ui": "reference",
      "reference": "effect"
    },
    "ui": "multi-select",
    "optional": true
  },
  "value": {
    "type": "int",
    "ui": "number"
  },
  "requirements": {
    "type": "object",
    "fields": {
      "level": {
        "type": "int",
        "ui": "number"
      },
      "strength": {
        "type": "int",
        "ui": "number",
        "optional": true
      }
    }
  },
  "is_quest_item": {
    "type": "bool",
    "ui": "checkbox"
  },
  "is_consumable": {
    "type": "bool",
    "visible_if": "type = Consumable",
    "ui": "checkbox"
  },
  "is_material": {
    "type": "bool",
    "visible_if": "type = Material",
    "ui": "checkbox"
  },
  "tags": {
    "type": "array",
    "items": {
      "type": "string"
    },
    "ui": "tag-input",
    "optional": true
  },
  "image_path": {
    "type": "string",
    "ui": "filepicker",
    "optional": true
  }
}